        :root { --p: #ff0000; --bg: #0f0f0f; --card: #1f1f1f; --text: #ffffff; }
        body { font-family: 'Segoe UI', sans-serif; background: var(--bg); color: var(--text); display: flex; flex-direction: column; align-items: center; padding: 20px; }
        #login-screen { position: fixed; inset: 0; background: var(--bg); display: flex; justify-content: center; align-items: center; z-index: 100; }
        .login-card { background: var(--card); padding: 40px; border-radius: 15px; border: 1px solid var(--p); text-align: center; }
        #admin-panel { display: none; width: 100%; max-width: 500px; }
        .card { background: var(--card); padding: 20px; border-radius: 12px; margin-bottom: 20px; border: 1px solid #333; }
        input { background: #000; border: 1px solid #444; color: white; padding: 12px; border-radius: 8px; text-align: center; font-size: 1.1rem; width: 80%; margin: 10px 0; }
        button { background: var(--p); border: none; padding: 12px; border-radius: 8px; cursor: pointer; font-weight: bold; width: 100%; color: white; transition: 0.3s; }
        .match-item { background: #2a2a2a; padding: 15px; border-radius: 8px; margin-bottom: 10px; display: flex; flex-direction: column; gap: 10px; border-left: 5px solid var(--p); }
        .btn-group { display: flex; gap: 10px; }
        .edit-btn { background: #fbbf24; color: black; flex: 1; border-radius: 5px; border:none; cursor: pointer; padding: 8px; }
        .del-btn { background: #ff4444; color: white; flex: 1; border-radius: 5px; border:none; cursor: pointer; padding: 8px; }
