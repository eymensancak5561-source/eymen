<body>
    <div id="login-screen">
        <div class="login-card">
            <h2>üîê YouTube Lig Admin</h2>
            <input type="password" id="passInput" placeholder="≈ûifre...">
            <button onclick="login()">Gƒ∞Rƒ∞≈û YAP</button>
        </div>
    </div>

    <div id="admin-panel">
        <h2 style="text-align:center">MA√á Y√ñNETƒ∞Mƒ∞</h2>
        <div class="card">
            <h3 id="form-title">Yeni Ma√ß Kaydƒ±</h3>
            <div style="display: grid; grid-template-columns: 1fr auto 1fr; align-items: center; gap: 10px;">
                <div style="text-align:center"><label style="font-size: 12px;">EYMEN YAƒûIZ</label><input type="number" id="s1" placeholder="Gol"></div>
                <div style="margin-top:20px">VS</div>
                <div style="text-align:center"><label style="font-size: 12px;">BERAT EFE</label><input type="number" id="s2" placeholder="Gol"></div>
            </div>
            <input type="hidden" id="edit-id">
            <button id="main-btn" onclick="saveMatch()">KAYDET</button>
            <button id="cancel-btn" onclick="resetForm()" style="background:#444; margin-top:5px; display:none;">ƒ∞PTAL</button>
        </div>
        <div id="matchList"></div>
    </div>

    <script>
        const PASS = "admin123";
        let matches = JSON.parse(localStorage.getItem('efb_matches')) || [];
        function login() {
            if(document.getElementById('passInput').value === PASS) {
                document.getElementById('login-screen').style.display = 'none';
                document.getElementById('admin-panel').style.display = 'block';
                renderMatches();
            }
        }
        function saveMatch() {
            const s1 = document.getElementById('s1').value === "" ? 0 : parseInt(document.getElementById('s1').value);
            const s2 = document.getElementById('s2').value === "" ? 0 : parseInt(document.getElementById('s2').value);
            const editId = document.getElementById('edit-id').value;
            if(editId) {
                const index = matches.findIndex(m => m.id == editId);
                matches[index].s1 = s1; matches[index].s2 = s2;
            } else {
                matches.push({ id: Date.now(), s1, s2 });
            }
            localStorage.setItem('efb_matches', JSON.stringify(matches));
            resetForm(); renderMatches();
        }
        function editMatch(id) {
            const m = matches.find(m => m.id == id);
            document.getElementById('s1').value = m.s1;
            document.getElementById('s2').value = m.s2;
            document.getElementById('edit-id').value = id;
            document.getElementById('form-title').innerText = "D√ºzenle";
            document.getElementById('main-btn').innerText = "G√úNCELLE";
            document.getElementById('cancel-btn').style.display = 'block';
        }
        function deleteMatch(id) {
            if(confirm("Silinsin mi?")) {
                matches = matches.filter(m => m.id != id);
                localStorage.setItem('efb_matches', JSON.stringify(matches));
                renderMatches();
            }
        }
        function resetForm() {
            document.getElementById('s1').value = ""; document.getElementById('s2').value = "";
            document.getElementById('edit-id').value = ""; document.getElementById('main-btn').innerText = "KAYDET";
            document.getElementById('cancel-btn').style.display = 'none';
        }
        function renderMatches() {
            const list = document.getElementById('matchList');
            list.innerHTML = matches.map(m => `
                <div class="match-item">
                    <span>EYMEN ${m.s1} - ${m.s2} BERAT</span>
                    <div class="btn-group">
                        <button class="edit-btn" onclick="editMatch(${m.id})">D√ºzenle</button>
                        <button class="del-btn" onclick="deleteMatch(${m.id})">Sil</button>
                    </div>
                </div>
            `).reverse().join('');
        }
    </script>
</body>
